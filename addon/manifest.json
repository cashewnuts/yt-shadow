{
  "manifest_version": 2,
  "name": "YtShadow",
  "version": "0.1.0",
  "description": "Shadowing extensions for youtube",
  "icons": {
    "24": "icons/yt-24.png",
    "48": "icons/yt-48.png",
    "96": "icons/yt-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["yt-shadow.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "24": "icons/yt-24.png",
      "48": "icons/yt-48.png",
      "96": "icons/yt-96.png"
    },
    "default_title": "Yt Shadow",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "*://video.google.com/*",
    "storage"
  ]
}
